# SelfDB Development Environment Configuration
# Development-specific settings with debug enabled


SELFDB_VERSION="v0.05 early beta"

# ================================
# NETWORK CONFIGURATION
# ================================
DOCKER_NETWORK=selfdb_dev_network

# ================================
# INTERNAL SERVICE PORTS
# ================================
INTERNAL_POSTGRES_PORT=5432
INTERNAL_PGBOUNCER_PORT=6432

# ================================
# PHOENIX REALTIME SERVICE
# ================================

PHOENIX_ENABLED=true
PHOENIX_SECRET_KEY_BASE=dev_phoenix_secret_key_base_minimum_64_characters_required_here_for_development_only
INTERNAL_API_KEY=dev_internal_api_key_for_service_communication

# ================================
# EXTERNAL SERVICE PORTS - DEVELOPMENT
# ================================
POSTGRES_PORT=5432
PGBOUNCER_PORT=6432
STORAGE_PORT=8001
API_PORT=8000
FRONTEND_PORT=3000
DENO_PORT=8090


# ================================
# DEVELOPMENT INSTANCE CONFIG
# ================================
INSTANCE_ID=development
COMPOSE_PROJECT_NAME=selfdb_dev

# ================================
# DEVELOPMENT DATABASE
# ================================
POSTGRES_DB=selfdb_dev
POSTGRES_USER=selfdb_dev_user
POSTGRES_PASSWORD=dev_password_123
POSTGRES_HOST=localhost
PGBOUNCER_HOST=localhost

# PgBouncer Configuration - Optimized for testing
PGBOUNCER_MAX_CLIENT_CONN=1000
PGBOUNCER_DEFAULT_POOL_SIZE=25
PGBOUNCER_RESERVE_POOL_SIZE=5
PGBOUNCER_SERVER_LIFETIME=1200
PGBOUNCER_SERVER_IDLE_TIMEOUT=300
PGBOUNCER_QUERY_WAIT_TIMEOUT=60
PGBOUNCER_CLIENT_IDLE_TIMEOUT=300

# ================================
# ENVIRONMENT SETTINGS
# ================================
ENV=dev
DOCKER_ENV=false
DEBUG=true
RELOAD=true
TEST_MODE=false

# ================================
# DEVELOPMENT SECURITY
# ================================
JWT_SECRET_KEY=dev_jwt_secret_not_for_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=72

# ================================
# DEVELOPMENT LOGGING
# ================================
LOG_LEVEL=DEBUG
ENABLE_METRICS=true

# ================================
# ADMIN CONFIGURATION
# ================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=adminpassword123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# ================================
# API CONFIGURATION
# ================================
API_KEY=dev_api_key_not_for_production
ALLOWED_CORS=http://localhost:3000,http://localhost:5173,http://localhost:8000