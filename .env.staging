# SelfDB Staging Environment Configuration
# Staging-specific settings for pre-production testing

SELFDB_VERSION="v0.05 early beta"

# ================================
# NETWORK CONFIGURATION
# ================================
DOCKER_NETWORK=selfdb_staging_network

# ================================
# INTERNAL SERVICE PORTS
# ================================
INTERNAL_POSTGRES_PORT=5432
INTERNAL_PGBOUNCER_PORT=6432

# ================================
# PHOENIX REALTIME SERVICE
# ================================

PHOENIX_ENABLED=true
PHOENIX_SECRET_KEY_BASE=staging_phoenix_secret_key_base_minimum_64_characters_required_for_staging
INTERNAL_API_KEY=staging_internal_api_key_change_in_production

# ================================
# EXTERNAL SERVICE PORTS - STAGING
# ================================
POSTGRES_PORT=5433
PGBOUNCER_PORT=6433
STORAGE_PORT=8011
API_PORT=8010
FRONTEND_PORT=3001
DENO_PORT=8091

# ================================
# STAGING INSTANCE CONFIG
# ================================
INSTANCE_ID=staging
COMPOSE_PROJECT_NAME=selfdb_staging

# ================================
# STAGING DATABASE
# ================================
POSTGRES_DB=selfdb_staging
POSTGRES_USER=selfdb_staging_user
POSTGRES_PASSWORD=staging_password_123
POSTGRES_HOST=localhost
PGBOUNCER_HOST=localhost

# PgBouncer Configuration
PGBOUNCER_MAX_CLIENT_CONN=5000
PGBOUNCER_DEFAULT_POOL_SIZE=50
PGBOUNCER_RESERVE_POOL_SIZE=10
PGBOUNCER_SERVER_LIFETIME=3600
PGBOUNCER_SERVER_IDLE_TIMEOUT=600
PGBOUNCER_QUERY_WAIT_TIMEOUT=30
PGBOUNCER_CLIENT_IDLE_TIMEOUT=600

# ================================
# ENVIRONMENT SETTINGS
# ================================
ENV=staging
DOCKER_ENV=true
DEBUG=false
RELOAD=false
TEST_MODE=false

# ================================
# STAGING SECURITY
# ================================
JWT_SECRET_KEY=staging_jwt_secret_123
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=72

# ================================
# STAGING LOGGING
# ================================
LOG_LEVEL=INFO
ENABLE_METRICS=true

# ================================
# ADMIN CONFIGURATION
# ================================
ADMIN_EMAIL=staging@example.com
ADMIN_PASSWORD=stagingpassword123
ADMIN_FIRST_NAME=Staging
ADMIN_LAST_NAME=Admin

# ================================
# API CONFIGURATION
# ================================
API_KEY=staging_api_key_123
ALLOWED_CORS=http://localhost:3001,localhost:8010