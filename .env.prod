# SelfDB Production Environment Configuration
# Production-specific settings with security hardened

SELFDB_VERSION="v0.05 early beta"

# ================================
# NETWORK CONFIGURATION
# ================================
DOCKER_NETWORK=selfdb_prod_network

# ================================
# INTERNAL SERVICE PORTS
# ================================
INTERNAL_POSTGRES_PORT=5432
INTERNAL_PGBOUNCER_PORT=6432

# ================================
# PHOENIX REALTIME SERVICE
# ================================

PHOENIX_ENABLED=true
PHOENIX_SECRET_KEY_BASE=CHANGE_THIS_production_phoenix_secret_minimum_64_chars_use_mix_phx_gen_secret
INTERNAL_API_KEY=CHANGE_THIS_production_internal_api_key_use_strong_random_key


# ================================
# EXTERNAL SERVICE PORTS - PRODUCTION
# ================================
POSTGRES_PORT=5434
PGBOUNCER_PORT=6434
STORAGE_PORT=8021
API_PORT=8020
FRONTEND_PORT=3002
DENO_PORT=8092

# ================================
# PRODUCTION INSTANCE CONFIG
# ================================
INSTANCE_ID=production
COMPOSE_PROJECT_NAME=selfdb_prod

# ================================
# PRODUCTION DATABASE
# ================================
POSTGRES_DB=selfdb_production
POSTGRES_USER=selfdb_prod_user
POSTGRES_PASSWORD=prod_password_123
POSTGRES_HOST=localhost
PGBOUNCER_HOST=localhost

# PgBouncer Configuration
PGBOUNCER_MAX_CLIENT_CONN=5000
PGBOUNCER_DEFAULT_POOL_SIZE=50
PGBOUNCER_RESERVE_POOL_SIZE=10
PGBOUNCER_SERVER_LIFETIME=3600
PGBOUNCER_SERVER_IDLE_TIMEOUT=600
PGBOUNCER_QUERY_WAIT_TIMEOUT=30
PGBOUNCER_CLIENT_IDLE_TIMEOUT=600

# ================================
# ENVIRONMENT SETTINGS
# ================================
ENV=prod
DOCKER_ENV=true
DEBUG=false
RELOAD=false
TEST_MODE=false

# ================================
# PRODUCTION SECURITY
# ================================
JWT_SECRET_KEY=prod_jwt_secret_123
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=72

# ================================
# PRODUCTION LOGGING
# ================================
LOG_LEVEL=WARN
ENABLE_METRICS=true

# ================================
# ADMIN CONFIGURATION
# ================================
ADMIN_EMAIL=prod@example.com
ADMIN_PASSWORD=prodpassword123
ADMIN_FIRST_NAME=Production
ADMIN_LAST_NAME=Admin

# ================================
# API CONFIGURATION
# ================================
API_KEY=prod_api_key_123
ALLOWED_CORS=http://localhost:3002,localhost:8020